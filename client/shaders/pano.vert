layout(location = 0) in vec3 vert_pos;

out vec3 frag_texcoords;

uniform mat4 projection;
uniform mat4 camera;

void main()
{
    frag_texcoords = vec3(-vert_pos.x, vert_pos.y, vert_pos.z);
    gl_Position = projection * camera * vec4(vert_pos, 1.0);
}
